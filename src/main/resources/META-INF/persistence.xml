<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="surveyPU" transaction-type="JTA">
        <jta-data-source>java:/jdbc/SurveyDS</jta-data-source>

        <class>com.dynata.surveyhw.entities.Member</class>
        <class>com.dynata.surveyhw.entities.Survey</class>
        <class>com.dynata.surveyhw.entities.Status</class>
        <class>com.dynata.surveyhw.entities.Participation</class>
        <properties>
            <!-- Hibernate provider esetÃ©n -->
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
